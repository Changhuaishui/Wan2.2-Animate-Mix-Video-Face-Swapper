# Wan2.2-Animate-Mix Configuration Template
# Copy this file to .env and fill in your credentials

# === Required Configuration ===

# DashScope API Key (required)
# Get your API key from: https://dashscope.console.aliyun.com/apiKey
DASHSCOPE_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# === Optional Configuration ===

# Processing mode (wan-std or wan-pro)
DEFAULT_MODE=wan-std

# OSS Configuration (optional, for permanent storage)
# If not set, temporary DashScope upload will be used
USE_OSS=false
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=wan22-videos
OSS_ENDPOINT=oss-cn-beijing.aliyuncs.com

# Processing parameters
POLLING_INTERVAL=15
MAX_WAIT_TIME=600
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Face detection
ENABLE_FACE_DETECTION=true
FACE_DETECTION_CONFIDENCE=0.5

# Logging
LOG_LEVEL=INFO

# Temporary file hosting service (if not using OSS)
TEMP_UPLOAD_SERVICE=dashscope
